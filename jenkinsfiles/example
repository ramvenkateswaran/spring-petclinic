#!/bin/env groovy

pipeline {
  agent none

  environment {
    IMAGE = "liatrio/petclinic-tomcat"
  }

  stages {
    stage('Build') {
      agent any
      steps {
        sh 'mvn clean install'
      }
    }
    stage('Package') {
      agent any
      steps {
        script {
          if ( env.BRANCH_NAME == 'master' ) {
            pom = readMavenPom file: 'pom.xml'
            TAG = pom.version
          } else {
            TAG = env.BRANCH_NAME
          }
          sh "docker build -t ${env.IMAGE}:${TAG} ."
        }
      }
    }
    stage('Deploy to Dev') {
      agent any
      steps {
        sh 'docker rm -f petclinic-tomcat-temp || true'
        sh "docker run -d -p 9966:8080 --name petclinic-tomcat-temp ${env.IMAGE}:${TAG}"
      }
    }
    stage('Run Tests') {
            parallel {
                stage('Branch A') {
                    agent any
                    steps {
                        echo "Unit Test"
                    }
                }
                stage('Branch B') {
                    agent any
                    steps {
                        echo "Integration Test"
                    }
                }
            }
        }
    stage('Another stage') {
      agent any
      steps {
        //sample dummy step #2
        sh 'sleep 4'
      }
    }
    stage('Another Stage 2') {
        agent any
	steps {
	//mock stage
	sh 'sleep 4'   
        }
    }
  }
}
